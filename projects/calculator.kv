<MyButton@Button>:
    font_size: 40
    background_color:.7,.7,.7,1


<MyGridLayout>:
    id:calculator
    display:input
    rows:5
    padding: '10dp'
    spacing: '10dp'

    BoxLayout:
        TextInput:
            id:input
            font_size:40
            multiline:False
    
    BoxLayout:
        spacing: '10dp'
        MyButton:
            text: '7'
            on_press: input.text += self.text
        MyButton:
            text: '8'
            on_press: input.text += self.text
        MyButton:
            text: '9'
            on_press: input.text += self.text
        MyButton:
            text: '+'
            on_press: input.text += self.text
    BoxLayout:
        spacing: '10dp'
        MyButton:
            text: '4'
            on_press: input.text += self.text
        MyButton:
            text: '5'
            on_press: input.text += self.text
        MyButton:
            text: '6'
            on_press: input.text += self.text
        MyButton:
            text: '-'
            on_press: input.text += self.text
    BoxLayout:
        spacing: '10dp'
        MyButton:
            text: '1'
            on_press: input.text += self.text
        MyButton:
            text: '2'
            on_press: input.text += self.text
        MyButton:
            text: '3'
            on_press: input.text += self.text
        MyButton:
            text: '*'
            on_press: input.text += self.text
    BoxLayout:
        spacing: '10dp'
        MyButton:
            text: 'CLEAR'
            on_press: input.text = ''
        MyButton:
            text: '0'
            on_press: input.text += self.text
        MyButton:
            text: '='
            on_press:calculator.calc(input.text)
        MyButton:
            text: '/'
            on_press: input.text += self.text